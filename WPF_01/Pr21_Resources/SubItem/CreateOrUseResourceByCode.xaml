<Page x:Class="Pr21_Resources.SubItem.CreateOrUseResourceByCode"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pr21_Resources.SubItem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateAndUseResourceByCode">

    <Page.Resources>
        <ControlTemplate x:Key="customBtn" TargetType="Button">
            <Border BorderThickness="0,0,0,2" BorderBrush="#1C54C0" Height="30" Width="180" HorizontalAlignment="Center">
                <TextBlock Text="{TemplateBinding Content}" Foreground="#1C54C0" FontSize="16" HorizontalAlignment="Center"></TextBlock>
            </Border>
        </ControlTemplate>
    </Page.Resources>

    <StackPanel>
        <Button Content="Btn01" Template="{StaticResource customBtn}"/>
        <Button Content="Btn01" Template="{StaticResource customBtn}"/>
    </StackPanel>
</Page>
