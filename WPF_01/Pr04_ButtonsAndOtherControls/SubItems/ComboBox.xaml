<Window x:Class="Pr04_ButtonsAndOtherControls.SubItems.ComboBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pr04_ButtonsAndOtherControls.SubItems"
        mc:Ignorable="d"
        Title="ComboBox Usage" Height="450" Width="800">

    <Window.Resources>
        <ResourceDictionary>
            <local:ComboBoxData x:Key="myComboBoxData"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--表示带有下拉列表的选择控件，通过单击控件上的箭头可显示或隐藏下拉列表-->
        <!--一般通过ItemsSource来将要显示的结果进行绑定到该下拉列表中-->
        <StackPanel>
            <ComboBox Name="combox1" ItemsSource="{StaticResource myComboBoxData}" Text="MyCustomComBox" 
                      IsEditable="True" IsReadOnly="True">
            </ComboBox>
        </StackPanel>
        <TextBlock Grid.Row="1" Text="{Binding ElementName=combox1, Path=SelectedItem}" HorizontalAlignment="Center"/>
    </Grid>
</Window>
