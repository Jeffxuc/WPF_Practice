<Page x:Class="Pr60_TestFunction.F02_ShowImage.LoadAndSaveImg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pr60_TestFunction.F02_ShowImage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoadAndSaveImg" ShowsNavigationUI="False">

    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Name="t01" Grid.Row="0" Grid.Column="1" Margin="10 20"/>
        <Image Name="imgSave" Grid.Row="1" Grid.Column="1" Margin="10"/>
        <Button Name="deleBtn" Grid.Row="1" Grid.Column="0" Content="deleBtn" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Click="OnDeleteBtn_clicked"/>

    </Grid>
</Page>
