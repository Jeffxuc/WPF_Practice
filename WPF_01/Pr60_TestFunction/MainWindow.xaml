<Window x:Class="Pr60_TestFunction.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pr60_TestFunction"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600" x:Name="wind">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <TextBlock Name="tb" FontFamily="Times New Roman" FontSize="20" VerticalAlignment="Center" Margin="20">
            This is the Main Window
        </TextBlock>

        <Canvas Grid.Row="1"  Margin="5">
            <Button Name="btn01" Width="80" Height="20" Content="Btn01"  Canvas.Left="10" Canvas.Top="20"/>
            <Button Name="btn02" Width="80" Height="20" Content="Btn02"  Canvas.Right="20" Canvas.Top="20"/>
            <Button Name="btn03" Width="80" Height="20" Content="Btn03"  Canvas.Left="50" Canvas.Bottom="70"/>
            <Button Name="btn04" Width="80" Height="20" Content="Btn03"  Canvas.Right="50" Canvas.Bottom="50"/>
        </Canvas>

    </Grid>
</Window>
