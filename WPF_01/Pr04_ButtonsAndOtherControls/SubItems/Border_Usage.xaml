<Page x:Class="Pr04_ButtonsAndOtherControls.SubItems.Border_Usage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pr04_ButtonsAndOtherControls.SubItems"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Border_Usage" ShowsNavigationUI="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--设置Border的阴影毛边-->
        <Border x:Name="bd" Margin="50" Background="AliceBlue">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="#000000" Direction="300" Opacity="0.5" ShadowDepth="7"/>
            </Border.Effect>
        </Border>

        <Border x:Name="bd1" Grid.Column="1" Margin="50" Background="Beige">
            <Border.Effect>
                <BlurEffect Radius="4"/>
            </Border.Effect>
        </Border>
    </Grid>
</Page>
