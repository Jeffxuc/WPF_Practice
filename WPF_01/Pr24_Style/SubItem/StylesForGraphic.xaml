<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Pr24_Style.SubItem">
    
    <Canvas.Resources>
        <!--通过Style来定义椭圆的基本形状和特征，可以在后面进行统一调用-->
        <Style TargetType="{x:Type Ellipse}">
            <Setter Property="Stroke" Value="Black"/>
            <Setter Property="StrokeThickness" Value="4"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Width" Value="100"/>
        </Style>
        
        <!--此资源的使用-->
        <Style TargetType="{x:Type Line}">
            <Setter Property="X1" Value="140"/>
            <Setter Property="X2" Value="500"/>
            <!--<Setter Property="Width" Value="100"/>-->
            <Setter Property="Stroke" Value="OliveDrab"/>
            <Setter Property="StrokeThickness" Value="8"/>
        </Style>
    </Canvas.Resources>
    
    <Ellipse Canvas.Left="0" Canvas.Top="0" Fill="Blue"/>
    <Ellipse Canvas.Left="130" Canvas.Top="0" Fill="Red"/>
    <Ellipse Canvas.Left="0" Canvas.Top="101" Fill="Cornsilk"/>

    <Line Y1="110" Y2="110"/>
    <Line Y1="130" Y2="130"/>

</Canvas>