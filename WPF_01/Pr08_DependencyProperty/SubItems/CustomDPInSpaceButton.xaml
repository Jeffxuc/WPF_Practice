<Window x:Class="Pr08_DependencyProperty.SubItems.CustomDPInSpaceButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pr08_DependencyProperty.SubItems"
        mc:Ignorable="d"
        Title="Custom Dependency Property in Space Button" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <local:SpaceButton x:Name="btn0" FontSize="20"></local:SpaceButton>
        <local:SpaceButton x:Name="btn1" Grid.Row="1" FontSize="20"></local:SpaceButton>
        <local:SpaceButton x:Name="btn2" Grid.Row="2" FontSize="20"></local:SpaceButton>
        <local:SpaceButton x:Name="btn3" Grid.Row="3" FontSize="20"></local:SpaceButton>
        
    </Grid>
</Window>
